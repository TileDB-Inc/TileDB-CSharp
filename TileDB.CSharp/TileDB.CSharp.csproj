<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Platforms>x64</Platforms>
    <!-- don't compile everything under path by default -->
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <!-- compile files in src/ -->
    <Compile Include="src\*.cs" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64' and '$(OS)' == 'Windows_NT'">
    <OutputPath>../dist/Windows/lib</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64' and '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))'">
    <OutputPath>../dist/Linux/lib</OutputPath>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|x64' and '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))'">
    <OutputPath>../dist/Darwin/lib</OutputPath>
  </PropertyGroup>

  <ItemGroup Condition=" '$(OS)' == 'Windows_NT' ">
    <Content Include="..\dist\Windows\lib\tiledb.dll" CopyToOutputDirectory="PreserveNewest">
      <Link>tiledb.dll</Link>
    </Content>
    <Content Include="..\dist\Windows\lib\tiledbcs.dll" CopyToOutputDirectory="PreserveNewest">
      <Link>tiledbcs.dll</Link>
    </Content>
  </ItemGroup>
  <ItemGroup Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))' ">
    <Content Include="..\dist\Darwin\lib\libtiledb.dylib" CopyToOutputDirectory="PreserveNewest">
      <Link>libtiledb.dylib</Link>
    </Content>
    <Content Include="..\dist\Darwin\lib\tiledbcs.dylib" CopyToOutputDirectory="PreserveNewest">
      <Link>libtiledbcs.dylib</Link>
    </Content>
  </ItemGroup>
  <ItemGroup Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))' And Exists('..\dist\Linux\lib\libtiledb.so')">
     <!-- this item is conditional in case we have a system-wide install -->
     <Content Include="..\dist\Linux\lib\libtiledb.so" CopyToOutputDirectory="PreserveNewest">
      <Link>tiledb.so</Link>
    </Content>
  </ItemGroup>
  <ItemGroup Condition=" '$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Linux)))'">
    <Content Include="..\dist\Linux\lib\tiledbcs.so" CopyToOutputDirectory="PreserveNewest">
      <Link>tiledbcs.so</Link>
    </Content>
  </ItemGroup>
</Project>
